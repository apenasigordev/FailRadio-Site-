<html>
 <%-include("./includes/head.ejs", {title: "FailRadio", desc: "The best music radio bot for Discord."})%>
 <body>
  <%-include("./includes/navbar.ejs")%>
  <%radio.forEach(r => {%>
  <%if(req.params.id === r.route) {%>
  <div class="home">
  <center>
  <img src="<%=r.image%>" class="_imgrd"/>
   <br>
   <br>
   <h2><%=r.name%></h2>
   
  <audio id="audioControl" autoplay>
  <source src="<%=r.link%>" type="audio/ogg">
  <source src="<%=r.link%>" type="audio/mpeg">
  Your browser does not support the audio tag.
</audio>
</center>
<center><button id="pb" class="invite" onclick="pp()"><i id="play" class="fas fa-play" style="display: none;"></i><i id="pause" class="fas fa-pause" style="display: flex;"></i></button>
</center>
</div>
<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
  <path fill="#cc34fa" fill-opacity="1" d="M0,32L48,42.7C96,53,192,75,288,122.7C384,171,480,245,576,240C672,235,768,149,864,106.7C960,64,1056,64,1152,74.7C1248,85,1344,107,1392,117.3L1440,128L1440,0L1392,0C1344,0,1248,0,1152,0C1056,0,960,0,864,0C768,0,672,0,576,0C480,0,384,0,288,0C192,0,96,0,48,0L0,0Z"></path>
</svg>
<script>
var audio = document.getElementById("audioControl")
var pb = document.getElementById("pb");
var play = document.getElementById("play");
var pause = document.getElementById("pause");
function pp() {
if(!audio.paused) {
play.style.display = "flex";
pause.style.display = "none";
audio.pause();
} else {
play.style.display="none";
pause.style.display="flex";
audio.play();
}

}
</script>
<%} else {%>
<!--<center>This radio doesn't exists</center>-->
<%}
})%>
  
  <script src="https://kit.fontawesome.com/2c8728d622.js" crossorigin="anonymous"></script>
 </body>
</html>